---
import { Image } from 'astro:assets';
import Logo from '../assets/isotipo_blue.png';

const currentYear = new Date().getFullYear();

const footerLinks = {
  empresa: [
    { text: "Inicio", href: "#" },
    { text: "Servicios", href: "#servicios" },
    { text: "Beneficios", href: "#beneficios" },
    { text: "Nosotros", href: "#nosotros" },
    { text: "Contacto", href: "#contacto" },
  ],
  legal: [
    { text: "Términos y condiciones", href: "#" },
    { text: "Política de privacidad", href: "#" },
  ],
  social: [
    { text: "LinkedIn", href: "#", icon: "linkedin" },
    { text: "Twitter", href: "#", icon: "twitter" },
  ],
};
---

<footer class="bg-gray-100 dark:bg-gray-900 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <Image 
            src={Logo} 
            alt="Industria Predicta Logo" 
            class="h-8 w-auto"
          />
          <h3 class="text-xl font-bold text-light-blue dark:text-dark-blue">
            Industria Predicta
          </h3>
        </div>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          Transformando la industria con Inteligencia Artificial
        </p>
      </div>

      <div>
        <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Enlaces</h4>
        <ul class="space-y-2">
          {footerLinks.empresa.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-700 dark:text-gray-300 hover:text-light-green dark:hover:text-dark-green transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Legal</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-700 dark:text-gray-300 hover:text-light-green dark:hover:text-dark-green transition-colors"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-200 dark:border-gray-800 mt-8 pt-8 text-center">
      <p class="text-gray-700 dark:text-gray-300">
        © {currentYear} Industria Predicta. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>